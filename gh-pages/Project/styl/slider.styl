/*slider time animation*/
.center
    margin-top 10px
    transition all 0.2s ease
/*slider dots margin*/
.slick-dotted.slick-slider
    margin-bottom 10px
/*slider dots theme*/
.slick-dots
    position absolute
    width 70px
    left 50%
    transform translateX(-50%)
    bottom -34px
    display block
    /* width 100% */
    padding 0
    margin 0
    list-style none
    text-align center
    z-index 10
    border 1px solid #232628
    border-top none
    background-color#2b2e31
    box-shadow 0px 1px 0px 0px rgba(255, 255, 255, 0.06)
.slick-dots li
    position relative
    display inline-block
    width 20px
    height 20px
    margin 0 1px
    padding 0
    cursor pointer
.slick-dots li button
    font-size 0
    line-height 0
    display block
    width 20px
    height 20px
    padding 5px
    cursor pointer
    color transparent
    border 0
    outline none
    background transparent
.slick-dots li button:hover,
.slick-dots li button:focus
    outline none
.slick-dots li button:hover:before,
.slick-dots li button:focus:before
    opacity 1
.slick-dots li button:before
    font-family 'slick'
    font-size 9px
    line-height 20px
    position absolute
    top 0
    left 0
    width 20px
    height 20px
    content 'â€¢'
    text-align center
    opacity .25
    color #d9d9d9
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
.slick-dots li.slick-active button:before
    opacity .75
    color #9d0000