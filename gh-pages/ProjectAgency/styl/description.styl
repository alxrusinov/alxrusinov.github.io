.b-description
	&__title
		position relative
		display inline-block
		font-size 1.875rem
		font-weight 700
		line-height 1.6
		text-align left
		upper()
		margin-bottom 15px
		z-index 1
		&_center /*center mod*/
			text-align center
		&::before
			position absolute
			display block
			content ''
			width 70px
			height 21px
			top 50%
			left 0
			background-color $green
			z-index -1
	&__subtitle
		font-size 0.875rem
		font-weight 700
		line-height 1.714
		text-align left
		upper()
		margin-bottom 20px
	&__txt
		font-size 1rem
		font-weight 400
		line-height 1.875
		text-align justify
		margin-bottom 27px
		&_min /*min mod*/
			font-size 0.875rem
			font-weight 400
			line-height 2.143
			text-align left
		&_center /*center mod*/
			font-size 0.875rem
			font-weight 400
			line-height 1.714
			text-align center
	&_center /*center mod*/
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		align-items center
		margin-bottom 100px