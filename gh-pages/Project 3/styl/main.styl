@import 'vars.styl' /*переменные*/
@import 'mixins.styl' /*миксины*/
@import 'furniture.styl' /*кнопки и тд*/

.page
	margin 0 auto
	font-family Arial
	
.header__navbar
	color  #f7fdfe
	font-size 1.25rem
	font-weight 500
	line-height 1.401
	text-align center
	height 8.5vh
	.logo
		font-size 1.875rem
		text-align left
		upper()
		link(#82868f)
		font-weight 600
	.header__nav
		.header__link
			font-size 0.875rem
			upper()
			link(#82868f)
			font-weight 400
		.btn_header
			upper()
	
.header-main
	height 91.5vh
	background-image url('../img/header-bg.png')
	background-size cover
	color #f7fdfe
	&__title
		color  #f7fdfe
		font-size 2.75rem
		font-weight 500
		line-height 0.637
		text-transform capitalize
		letter-spacing 1px
		margin-bottom 2rem
		.fas
			font-size 12px
			color white
			&:first-child
				margin-right 1.5rem
			&:last-child
				margin-left 1.5rem
	&__txt
		max-width 804px
		color  #f7fdfe
		font-size 1.25rem
		font-weight 300ssss
		line-height 1.401
		text-align center
.about
	height 30vh
	background-color white
	&__title
		color  #0ebfdd
		font-size 2.75rem
		font-weight 600
		line-height 0.637
		text-align center
		margin-bottom 2rem
	&__txt
		max-width 804px
		color  #45494d
		font-size 1.25rem
		font-weight 500
		line-height 1.401
		text-align center
.team
	height 70vh
	background-color  #0ebfdd
	padding 60px 0
	text-align center
	&__title
		font-size 2.75rem
		font-weight 600
		line-height 0.637
		text-align center
		color white
		margin-bottom 110px
	&-gallery
		max-width 804px
		margin 0 auto
		align-self stretch
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-around
		margin-bottom 90px
	&-item
		color  #f7fdfe
		&__image
			margin-bottom 0.75rem
		&__title
			font-size 1.125rem
			font-weight 600
			text-align center
		&__txt
			font-size 1rem
			line-height 1.5
			font-style oblique
			text-align center
.map
	height (600/7.2)vh
	&__map
		border none
		width 100%
		height 100%

.footer
	height (120/7.2)vh
	max-height 120px
	background-color  #45494d
	&-nav
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		align-items center
		padding 20px 0
		&__links
			flex-basis 225px
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			justify-content space-between
		&__link
			link(#d8dee4)
			font-size 0.75rem
			text-align right
			upper()